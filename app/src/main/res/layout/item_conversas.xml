<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#e6e6e6">


    <TextView
        android:id="@+id/nome_conversa"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:fontFamily="@font/changa_semibold"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/foto_conversa"
        app:layout_constraintTop_toTopOf="@+id/foto_conversa" />

    <TextView
        android:id="@+id/ultima_conversa"
        android:layout_width="272dp"
        android:layout_height="17dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:text="..."
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nome_conversa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nome_conversa"
        app:layout_constraintTop_toBottomOf="@+id/nome_conversa" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_conversa"
        android:layout_width="73dp"
        android:layout_height="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>