<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".fragment.Home">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recyclerview_user"
        android:layout_width="412dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toTopOf="@+id/home_textview_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:orientation="horizontal" />

    <Button
        android:id="@+id/home_button_create_meeting"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:background="@drawable/linear_background"
        android:fontFamily="@font/changa"
        android:text="Criar Encontro"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/home_recyclerview_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_textview_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Encontros"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/home_button_create_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_textview_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Pessoas PrÃ³ximas"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/home_recyclerview_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recyclerview_meeting"
        android:layout_width="412dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:orientation="horizontal" />

    <TextView
        android:id="@+id/home_textview_next_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:maxLines="1"
        android:text="EncontroProx"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_textview_next_meeting_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_textview_next_meeting_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:maxLines="1"
        android:text="EncontroProx"
        android:textColor="#8A50C9"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/home_view_view"
        app:layout_constraintEnd_toEndOf="@+id/home_textview_next_meeting"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/home_textview_next_meeting" />

    <View
        android:id="@+id/home_view_view"
        android:layout_width="412dp"
        android:layout_height="2dp"
        android:background="@drawable/linear_background"
        app:layout_constraintBottom_toTopOf="@+id/home_textview_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>