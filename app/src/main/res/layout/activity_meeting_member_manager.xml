<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="315dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MeetingMemberManager">

    <TextView
        android:id="@+id/meember_manager_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/linear_background"
        android:gravity="center"
        android:maxLines="2"
        android:text="Ação"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <SearchView
        android:id="@+id/meember_manager_searchview"
        android:layout_width="314dp"
        android:layout_height="35dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/meember_manager_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="450dp" />

    <Button
        android:id="@+id/meember_manager_button_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_button_linear_negative"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:clickable="false"
        android:textSize="12sp" />

</LinearLayout>